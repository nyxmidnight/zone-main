{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "autoFormatConfigFile": true,
  "enabled": true,
  "language": "en-CA",
  "maxNumberOfProblems": 100,
  "numSuggestions": 8,
  "minWordLength": 3,
  "enabledFileTypes": {
    "*": true,
    "json": false
  },
  "words": [],
  "allowCompoundWords": false,
  "ignorePaths": [
    "package-lock.json",
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "vscode-extension",
    ".git"
  ],
  "flagWords": ["hte"],
  "spellCheckDelayMs": 1500,
  "diagnosticLevel": "Information",
  "custom": true,
  "customDictionaries": {
    "ProjectWords": {
      "name": "project-words",
      "path": "${workspaceRoot}/project-words.txt",
      "scope": "user",
      "addWords": true
    },
    "FandomTerms": {
      "name": "fandom-terms",
      "path": "${workspaceRoot}/fandom-terms.txt",
      "scope": "user",
      "addWords": false
    }
  },
  "ignoreWords": ["tagname"]
}
